generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(cuid())
  email            String?       @unique
  passwordHash     String?
  promiseId        String?       @unique
  name             String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  sessions         Session[]
  accounts         Account[]
  stashMemberships StashMember[]
}

model Stash {
  id             String            @id @default(cuid())
  name           String
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  members        StashMember[]
  invitations    StashInvitation[]
  items          Item[]
  checklistItems ChecklistItem[]
}

model StashMember {
  id        String    @id @default(cuid())
  stashId   String
  stash     Stash     @relation(fields: [stashId], references: [id], onDelete: Cascade)
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      StashRole @default(MEMBER)
  createdAt DateTime  @default(now())

  @@unique([stashId, userId])
  @@index([userId])
  @@index([stashId])
}

model StashInvitation {
  id        String           @id @default(cuid())
  stashId   String
  stash     Stash            @relation(fields: [stashId], references: [id], onDelete: Cascade)
  email     String?
  userId    String?
  invitedBy String
  status    InvitationStatus @default(PENDING)
  createdAt DateTime         @default(now())
  expiresAt DateTime

  @@index([stashId])
  @@index([email])
  @@index([userId])
}

enum StashRole {
  OWNER
  ADMIN
  MEMBER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Item {
  id             String    @id @default(cuid())
  stashId        String
  stash          Stash     @relation(fields: [stashId], references: [id], onDelete: Cascade)
  name           String
  description    String?
  category       Category  @default(OTHER)
  quantity       Int       @default(1)
  expirationDate DateTime?
  aiExtracted    Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  photos         Photo[]

  @@index([stashId])
  @@index([expirationDate])
}

model Photo {
  id           String   @id @default(cuid())
  itemId       String
  item         Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  minioKey     String
  originalName String?
  mimeType     String
  size         Int
  aiAnalysis   Json?
  createdAt    DateTime @default(now())

  @@index([itemId])
}

model ChecklistItem {
  id           String   @id @default(cuid())
  stashId      String
  stash        Stash    @relation(fields: [stashId], references: [id], onDelete: Cascade)
  name         String
  category     Category
  isDefault    Boolean  @default(false)
  isChecked    Boolean  @default(false)
  linkedItemId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([stashId, name])
  @@index([stashId])
}

enum Category {
  WATER
  CANNED_FOOD
  DRY_GOODS
  FIRST_AID
  TOOLS
  HYGIENE
  DOCUMENTS
  OTHER
}
